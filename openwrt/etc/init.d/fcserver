#!/bin/sh /etc/rc.common
PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin
NAME=fcserver
DESC="Fadecandy Server for OpenWrt"
START=51


set -e

start() {
	echo -n "Starting $DESC: $NAME"
	fcserver /etc/fcserver.config &
	echo "."
}

stop() {
	echo -n "Stopping $DESC: $NAME"
	killall fcserver
	echo "."
}

restart() {
	stop
	sleep 3
	start
}

reload() {
	restart
}
